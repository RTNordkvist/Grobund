<Window x:Class="Grobund.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grobund.WPF"
        xmlns:viewModel="clr-namespace:Grobund.WPF.MVVM.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="920" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.DataContext>
        <viewModel:MainViewModel/>

    </Window.DataContext>

    <Border Background="#272537"
            CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>



            <TextBlock Grid.Row="0" Text="Grobund" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="22"
                       Margin="50,0,0,0"
                       />

            <StackPanel Grid.Row="1">
                <RadioButton Content="Hjem" 
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}"/>
                <RadioButton Content="Registrer Medlem" 
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding RegisterMemberViewCommand}"/>

            </StackPanel>

            <TextBox Width="250"
                     Height="40"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Grid.Column="1"
                     Style="{StaticResource ModernTextBox}"/>

            <Ellipse x:Name="Exit" Fill="Red" 
                     Grid.Column="1" 
                     Grid.Row="0" 
                     Height="15" Width="15" 
                     HorizontalAlignment="Right" 
                     VerticalAlignment="Top" Margin="0,5,5,0" MouseLeftButtonDown="exitApp" Cursor="Hand" Focusable="True" />

            <Ellipse x:Name="Minimize" Fill="Yellow" 
                     Grid.Column="1" 
                     Grid.Row="0" 
                     Height="15" Width="15" 
                     HorizontalAlignment="Right" 
                     VerticalAlignment="Top" Margin="0,5,45,0" MouseLeftButtonDown="minimizeApp" Cursor="Hand" />

            <Ellipse x:Name="Maximize" Fill="Green" 
                     Grid.Column="1" 
                     Grid.Row="0" 
                     Height="15" Width="15" 
                     HorizontalAlignment="Right" 
                     VerticalAlignment="Top" Margin="0,5,25,0" MouseLeftButtonDown="maximizeApp" Cursor="Hand" />

            <!--Husk at reasearche-->
            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"/>

        </Grid>
    </Border>
</Window>
