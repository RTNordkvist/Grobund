<UserControl x:Class="Grobund.WPF.MVVM.Views.ReadMemberView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Grobund.WPF.MVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="-68,-62,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" 
                   Grid.Row="2" 
                   FontSize="24" 
                   MinWidth="250" 
                   Text="Skriv Id, Navn, Email eller Tlf.nr" 
                   Foreground="White" 
                   TextAlignment="Center"
                   Margin="0,10,0,40" Grid.RowSpan="2" />
        <!--Interacting UI-->
        <TextBox x:Name="SearchText" 
                 Grid.Column="1" 
                 Grid.Row="3" 
                 MinWidth="250" 
                 MinHeight="40"
                 Margin="0,10,0,55" 
                 Text="{Binding SearchText}"
                 MaxHeight="24" TextAlignment="Center" FontSize="24" Grid.RowSpan="2"
                 />

        <Button x:Name="SearchButton" 
                 Grid.Column="1" 
                 Grid.Row="4" 
                 MinWidth="10" 
                 MinHeight="40" 
                 MaxHeight="48"
                 Command="{Binding SearchMemberCommand}"
                 Content="Søg" HorizontalAlignment="Center" Width="115" Height="40" VerticalAlignment="Bottom" Grid.RowSpan="3" Margin="0,0,0,32"
                 />

        <!--Member NameInfo-->
        <TextBlock x:Name="Nametext" 
                   Grid.Column="1" 
                   Grid.Row="6" 
                   FontSize="24" 
                   MinWidth="250" 
                   Text="Navn:" 
                   Foreground="White"
                   Margin="10,0,0,0" />
        <TextBlock x:Name="MembersName" 
                   Grid.Column="1" 
                   Grid.Row="6" 
                   FontSize="24" 
                   MinWidth="50" 
                   Text="" 
                   Foreground="White"
                   Margin="107,0,0,0" Grid.RowSpan="2" HorizontalAlignment="Left" Width="175" Height="32" VerticalAlignment="Top" />
        <!--Member Email-->
        <TextBlock x:Name="Emailtext" 
                   Grid.Column="1" 
                   Grid.Row="7" 
                   FontSize="24" 
                   MinWidth="250" 
                   Text="E-mail:" 
                   Foreground="White"
                   Margin="10,0,0,0" />
        <TextBlock x:Name="MembersEmail" 
                   Grid.Column="1" 
                   Grid.Row="7" 
                   FontSize="24" 
                   MinWidth="50" 
                   Text="" 
                   Foreground="White"
                   Margin="107,0,10,0" Height="32" VerticalAlignment="Center" />
        <!--Phone Info-->
        <TextBlock x:Name="Phonetext" 
                   Grid.Column="1" 
                   Grid.Row="8" 
                   FontSize="24" 
                   MinWidth="250" 
                   Text="Telefon.Nr:" 
                   Foreground="White"
                   Margin="10,0,0,0" />
        <TextBlock x:Name="MembersPhone" 
                   Grid.Column="1" 
                   Grid.Row="8" 
                   FontSize="24" 
                   MinWidth="25" 
                   Text="" 
                   Foreground="White"
                   Margin="134,0,0,0" HorizontalAlignment="Left" Width="148" Height="32" VerticalAlignment="Top" />
        <!--Adress Info-->
        <TextBlock x:Name="Adresstext" 
                   Grid.Column="1" 
                   Grid.Row="9" 
                   FontSize="24" 
                   MinWidth="250" 
                   Text="Adress:" 
                   Foreground="White"
                   Margin="10,0,0,0" />
        <TextBlock x:Name="Membersadress" 
                   Grid.Column="1" 
                   Grid.Row="9" 
                   FontSize="24" 
                   MinWidth="25" 
                   Text="" 
                   Foreground="White"
                   Margin="134,0,0,0" HorizontalAlignment="Left" Width="148" Height="32" VerticalAlignment="Top" />
        <!--Registration-->
        <TextBlock x:Name="Registered" 
                   Grid.Column="1" 
                   Grid.Row="10" 
                   FontSize="24" 
                   MinWidth="250" 
                   Text="Betaling:" 
                   Foreground="White"
                   Margin="10,0,0,0" />
        <TextBlock x:Name="MemberRegistration" 
                   Grid.Column="1" 
                   Grid.Row="10" 
                   FontSize="24" 
                   MinWidth="25" 
                   Text="" 
                   Foreground="White"
                   Margin="134,0,0,0" HorizontalAlignment="Left" Width="148" Height="32" VerticalAlignment="Top" />
        <ListBox x:Name="MembersView" Grid.Column="1" Grid.Row="6" SelectedItem="{Binding SelectedMember}" d:ItemsSource="{Binding Members}" Grid.ColumnSpan="5" Margin="10,7,10,8" Grid.RowSpan="7"/>




    </Grid>
</UserControl>
